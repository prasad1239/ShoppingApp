<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/linear_layout_compat_padding"
    android:backgroundTint="@color/ez_cart_pink">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/userImage_layout_width"
        android:layout_height="@dimen/userImage_layout_height"
        android:src="@drawable/profile_placeholder" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/john_doe"
        android:layout_marginTop="@dimen/userName_layout_marginTop"
        />
</androidx.appcompat.widget.LinearLayoutCompat>